<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.yesgaori.sns.comment.repository.CommentRepository">

	<insert id="insertComment" parameterType="map">
		INSERT INTO
			`comment`
		(
			`userId`
			, `postId`
			, `content`
		)
		VALUE
		(
			#{userId}
			, #{postId}
			, #{content}
		)
	
	</insert>
	<select id="selectCommentList" parameterType="int" resultType="com.yesgaori.sns.comment.domain.Comment">
	
		SELECT
			`id`
			, `postId`
			, `userId`
			, `content`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`postId` = #{postId}
	
	</select>


</mapper>